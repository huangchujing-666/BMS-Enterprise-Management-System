@model pbxdata.model.funpermisson

@{
    ViewBag.Title = "功能编辑";
}

<div style="color:#FF5F3E;font-weight:bolder;line-height:20px;">功能编辑</div>


<link href="~/Css/divShow.css" rel="stylesheet" />
<link href="~/Css/All.css" rel="stylesheet" />
<script src="~/js/jquery-1.8.2.min.js"></script>
<script src="~/js/divShow.js"></script>
<script>
    $().ready(function () {

        $("#btnFunSave").click(function () {

            var id = $("#Id").val();
            var MenuId = $("#MenuId").val();
            var FunName = $("#FunName").val();
            var FunIndex = $("#FunIndex").val();
            $.post("/TableFun/updateFun", { id: id, MenuId: MenuId, FunName: FunName, FunIndex: FunIndex }, function (data) { alert(data) })
        })
        
    })

</script>


    <fieldset>
        <legend>功能编辑</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            菜单ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MenuId)
            @Html.ValidationMessageFor(model => model.MenuId)
        </div>

        <div class="editor-label">
            功能名称
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FunName)
            @Html.ValidationMessageFor(model => model.FunName)
        </div>

        <div class="editor-label">
            排序
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FunIndex)
            @Html.ValidationMessageFor(model => model.FunIndex)
        </div>

        <p>
            <input type="submit" value="保存" id="btnFunSave" />
        </p>
    </fieldset>

<div>
    @Html.ActionLink("返回", "getFun")
</div>

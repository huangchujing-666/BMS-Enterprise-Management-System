<script src="~/js/jquery-1.8.2.min.js" type="text/javascript"></script>
<link href="~/Css/divShow.css" rel="stylesheet" />
<link href="~/Css/Search.css" rel="stylesheet" />
<script src="~/js/divShow.js"></script>
<style type="text/css">
    *
    {
        padding:0px;
        margin:0px;
    }
    .ReportContainer
    {
        margin-top:10px;
        
    }
    .RateContainer
    {
        width:350px;
        float:left;
        margin-left:20px;
        height:600px;
        overflow:auto;
    }
    .mytable
    {
        min-width:300px;
    }
</style>
<header id="divSearch" style="width:100%;padding-top:10px;">
    <span class="spanProperty"><span class="spanPropertyName">品牌名：</span><select  class="spanPropertyValue" id="selCat"></select></span>
    <span class="spanProperty"><span class="spanPropertyName">类别名：</span><select  class="spanPropertyValue" id="selTypeNo"></select></span>
@*    品牌名:<select id="selCat"></select>类别名:<select id="selTypeNo"></select>*@
    <span class="spanProperty"><span class="spanPropertyName">价格：</span><input type="text" id="SellPriceMin" style="width:80px;" class="spanPropertyValue" />-<input type="text" class="spanPropertyValue" style="width:80px;" id="SellPriceMax"  /></span>
   @* 价格:<input type="text" id="SellPriceMin" class="spanPropertySearch"  class="onlyNum" />-<input type="text" class="spanPropertySearch" id="SellPriceMax"  />*@
    <input type="button" value="查询" style="width:50px;" class="spanPropertySearch" onclick="OnSearch()" />
</header>
<div class="ReportContainer">
    <div id="BrandRate" class="RateContainer"><table class="mytable"></table></div>
    <div id="TypeRate" class="RateContainer"><table class="mytable"></table></div>
    <div id="SellPriceRate" class="RateContainer"><table class="mytable"></table></div>
</div>





<script type="text/javascript">
    $.post("/DataChart/GetBrandlist", {}, function (data) { $("#selCat").html(data) });
    $.post("/DataChart/GetTypelist", {}, function (data) { $("#selTypeNo").html(data) });

    function OnSearch() {
        var Cat = $("#selCat").find("option:selected").val() == null ? "" : $("#selCat").find("option:selected").val();
        var TypeNo = $("#selTypeNo").find("option:selected").val() == null ? "" : $("#selTypeNo").find("option:selected").val();
        var SellPriceMin = $("#SellPriceMin").val().trim() == null ? "" : $("#SellPriceMin").val().trim();
        var SellPriceMax = $("#SellPriceMax").val().trim() == null ? "" : $("#SellPriceMax").val().trim();
        $.post("/DataChart/GetBrandRateReport", { Cat: Cat }, function (data) { $("#BrandRate").find("table").html(data); })
        $.post("/DataChart/GetTypeRateReport", { TypeNo: TypeNo }, function (data) { $("#TypeRate").find("table").html(data); })
        $.post("/DataChart/GetSellPriceRateReport", { SellPriceMin: SellPriceMin, SellPriceMax: SellPriceMax }, function (data) { $("#SellPriceRate").find("table").html(data); })
    }
    
</script>
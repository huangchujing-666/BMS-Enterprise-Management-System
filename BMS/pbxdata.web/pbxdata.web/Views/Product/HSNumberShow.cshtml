<script src="~/js/jquery-1.8.2.min.js"></script>
<link href="~/Css/admin_login.css" rel="stylesheet" />
<link href="~/Css/common.css" rel="stylesheet" />
<link href="~/Css/main.css" rel="stylesheet" />

<style>
    *
    {
        padding: 0px;
        margin: 0px;
        text-align:center; 
    }

    header
    {
        font-size: 1.5em;
        font-weight: bolder;
       
    }
    aside
    {
        width:85%;
        margin:0 auto;
    }
    .common-text,.mr10
    {
        height:30px;
    }
    .divContainer
    {
        font-size:1.5em;
        width:100%;
        opacity:1;
        background-color:white;
        padding-bottom:10px;
        transition:top,0.5s;
    }
    #tabHSinfo th, #tabHSinfo td
    {
        text-align:center;
        min-width:100px;
    }
    #tabHSinfo th
    {
        background-color: #F5F5F5;
    }
    #tabHSinfo tr:hover
    {
        background-color: #EAF2FF;
    }
    .topcss
    {
        position:fixed;
        top:0px;
        box-shadow: 0px 2px 5px #888888;
        
    }
</style>

<header>HS编码以及相关信息查询</header>
<article>
    <div class="divContainer">HS编码<input type="text" id="txtHSNumber" class="common-text required" />&nbsp;&nbsp;
        品名<input type="text" id="txtName" class="common-text required" />
        <input type="button" id="btnSearch" class="btn btn-primary btn6 mr10" value="查询" /></div>
    <aside>
        <div class="result-wrap">
            <div class="result-content">
                <table id="tabHSinfo" class="insert-tab" style="width: 100%">
                    
                </table>
            </div>
        </div>
    </aside>
</article>
<script type="text/javascript">
    document.body.onmousewheel = function (e) {
        e = e || event;
        var top = document.body.scrollTop || document.documentElement.scrollTop;
        if (top > $(".divContainer")[0].offsetTop) {
            $(".divContainer").addClass("topcss");
        }
        else {
            $(".divContainer").removeClass("topcss");
        }
    }
    $("#btnSearch").click(function () {
        var HSNumber = $("#txtHSNumber").val();
        var TypeName = $("#txtName").val();
        $.ajax({
            type: "POST",
            url: "/Product/SearchHSinfo",
            data: { "HSNumber": HSNumber, "TypeName": TypeName },
            success: function (data) {
                $("#tabHSinfo").html(data)
            },
            error: function () {

            }
        })
    })
    function SaveHSinfo(obj) {
        window.opener.document.getElementById("txtciqHSNo").value = obj;
    }
</script>

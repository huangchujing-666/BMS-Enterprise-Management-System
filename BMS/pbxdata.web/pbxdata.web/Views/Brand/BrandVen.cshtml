                }
            })
    })
    ///搜索类别名称
    function BrandChange() {
        $.ajax(
            {
                type: "post",
                datatype: "text",
                url: "/Brand/ChageBrand",
                data:
                    {
                        "Brand": $("#Sreach").val() == null ? "" : $("#Sreach").val()
                    },
                success: function (data) {
                    $("#Brand").html();
                    $("#Brand").html(data);
                }
            })
    }
    ///搜索
    function Search() {
        var BrandName = $("#BrandName").val() == null ? "" : $("#BrandName").val();
        var BrandNameVen = $("#BrandNameVen").val() == null ? "" : $("#BrandNameVen").val();
        $.ajax(
            {
                type: "post",
                datatype: "text",
                url: "/Brand/GetBrandExcel",
                data:
                    {
                        "BrandName": BrandName,
                        "BrandNameVen": BrandNameVen
                    },
                success: function (data) {
                    var da = data.split("❤");
                    $("#BrandTable").html(da[0]);
                    $("#PageCountM").html(da[1]);
                    $("#PageNumM").html(da[3]);
                    $("#returnPage").val(da[3]);
                    $("#AllCountsM").html(da[2]);
                }
            })
    }
    ///删除对应品牌
    function DeleteBrand(Id) {
        if (confirm("是否确认删除？")) {
            $.ajax(
                {
                    type: "post",
                    datatype: "text",
                    url: "/Brand/DeleteBrandExcel",
                    data: {
                        "Id": Id
                    },
                    success: function (data) {
                        alert(data)
                        Search()
                    }
                })
        }
    }
</script>

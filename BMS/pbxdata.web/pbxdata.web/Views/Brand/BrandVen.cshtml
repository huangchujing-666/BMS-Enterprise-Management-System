    ///确认添加类别
    function OkInsert() {
        var BrandName = $("#Brand").find("option:selected").text() == null ? "" : $("#Brand").find("option:selected").text();
        var BrandVenName = $("#VenBrandName").val() == null ? "" : $("#VenBrandName").val();
        var BrandAbridge = $("#Brand").val() == null ? "" : $("#Brand").val();
        var Vencode = $("#Vencode").val() == null ? "" : $("#Vencode").val();
        $.ajax(
            {

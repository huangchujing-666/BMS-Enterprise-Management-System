                datatype: "text",
                url: "/Brand/InsertBrand",
                data:
                    {
                        "BrandName": BrandName,
                        "BrandVenName": BrandVenName,
                        "BrandAbridge": BrandAbridge,
                        "Vencode": Vencode
                    },
                success: function (data) {
                    alert(data)
